{
  "name": "littlefoot",
  "description": "Footnotes without the footprint.",
  "version": "3.2.1",
  "sideEffects": false,
  "license": "MIT",
  "repository": "goblindegook/littlefoot",
  "scripts": {
    "clean": "rm -rf coverage dist",
    "build:scripts": "browserify --extension=ts -p tinyify -s littlefoot -o dist/littlefoot.js src/index.ts",
    "build:styles": "node-sass --output-style compressed --include-path styles -o dist/ styles/",
    "build:types": "tsc --emitDeclarationOnly",
    "optimize": "uglifyjs dist/littlefoot.js --compress unused=false --mangle > dist/littlefoot.min.js",
    "build": "yarn clean && mkdir -p dist && concurrently 'yarn build:types' 'yarn build:scripts' 'yarn build:styles' && yarn optimize",
    "watch:scripts": "watchify --extension=ts -s littlefoot -o dist/littlefoot.js src/index.ts",
    "watch:styles": "node-sass --watch --output-style compressed --include-path styles -o dist/ styles/",
    "format": "prettier --write '{cypress,src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint": "eslint '{cypress,src,test}/**/*.ts'",
    "pretest": "yarn lint",
    "test": "concurrently 'yarn test:types' 'yarn test:jest' 'yarn test:cypress'",
    "test:coverage": "concurrently 'yarn test:types' 'yarn test:jest --coverage' 'yarn test:cypress'",
    "test:cypress": "yarn build && cypress run",
    "test:cypress:open": "yarn build && cypress open",
    "test:jest": "jest",
    "test:types": "tsc --noEmit",
    "release": "standard-version",
    "prepublish": "yarn build"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "extensions": [
            ".js",
            ".ts"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "{src,test/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-fifteen",
    "testURL": "http://localhost"
  },
  "author": {
    "name": "Lu√≠s Rodrigues",
    "email": "hello@goblindegook.net",
    "url": "https://goblindegook.com/"
  },
  "main": "dist/littlefoot.min.js",
  "jsnext:main": "dist/littlefoot.js",
  "typings": "dist/index.d.ts",
  "style": "dist/littlefoot.css",
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/plugin-proposal-optional-chaining": "7.8.3",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@babel/runtime": "7.8.3",
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@cypress/browserify-preprocessor": "2.1.1",
    "@pacote/eslint-config": "2.0.0",
    "@testing-library/cypress": "5.0.2",
    "@testing-library/dom": "6.11.0",
    "@testing-library/jest-dom": "4.2.4",
    "@types/delegated-events": "1.1.0",
    "@types/jest": "24.0.25",
    "@types/lodash.debounce": "4.0.6",
    "@types/node": "12.12.24",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "babelify": "10.0.0",
    "browserify": "16.5.0",
    "codecov": "3.6.1",
    "concurrently": "5.0.2",
    "cypress": "3.6.1",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-cypress": "2.8.1",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "jest-environment-jsdom-fifteen": "1.0.2",
    "lint-staged": "9.5.0",
    "node-sass": "4.13.1",
    "prettier": "1.19.1",
    "standard-version": "7.0.1",
    "tinyify": "2.5.2",
    "typescript": "3.7.4",
    "uglify-js": "3.7.5",
    "watchify": "3.11.1"
  },
  "dependencies": {
    "@pacote/get-style": "^1.0.0",
    "@pacote/pixels": "^1.0.0",
    "delegated-events": "^1.0.10",
    "lodash.debounce": "^4.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
